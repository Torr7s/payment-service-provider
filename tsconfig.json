{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "es2020"
    ],
    "module": "commonjs",
    "rootDir": "src",
    "baseUrl": "src",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "dist",
    "removeComments": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "@/app/*": [
        "app/*"
      ],
      "@/domain/*": [
        "domain/*"
      ],
      "@/infra/*": [
        "infra/*"
      ]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src"
  ],
  "exclude": []
}